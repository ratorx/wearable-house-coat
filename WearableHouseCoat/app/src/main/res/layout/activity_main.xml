<?xml version="1.0" encoding="utf-8"?>

<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eerie_black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context="clquebec.com.wearablehousecoat.MainActivity"
    tools:deviceIds="wear">
    
    <!-- Scrollable wrapper for buttons -->
    <ScrollView
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdgeLength="20dp"
        android:paddingTop="60dp"
        android:requiresFadingEdge="vertical">

        <!-- Wrapper to allow centering of GridLayout in Scrollview -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <!-- Main button grid -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_togglebuttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <!-- Header text -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        app:boxedEdges="all">
        
        <!-- Room name -->
        <!-- TODO: check ellipsize works as intended (resize first, then ellipsis when minimum size reached.) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_ic_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_left" />

            <TextView
                android:id="@+id/main_currentlocation"
                android:layout_width="96dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal|clip_vertical"
                android:layout_weight="1"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/main_defaultlocation"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp"
                tools:text="living room and living room and living room and living room and living" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_right" />
        </LinearLayout>


        <include
            android:id="@+id/hue_control"
            layout="@layout/hue_control"
            android:visibility="gone">

        </include>

    </FrameLayout>

</android.support.wear.widget.BoxInsetLayout>

