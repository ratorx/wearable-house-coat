<?xml version="1.0" encoding="utf-8"?>

<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eerie_black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context="clquebec.com.wearablehousecoat.MainActivity"
    tools:deviceIds="wear">
    
    <!-- Scrollable wrapper for buttons -->
    <ScrollView
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdgeLength="20dp"
        android:paddingTop="60dp"
        android:requiresFadingEdge="vertical">

        <!-- Wrapper to allow centering of GridLayout in Scrollview -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Main button grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:isScrollContainer="true"
                android:scrollIndicators="left"
                android:scrollbars="vertical">

                <Button
                    android:id="@+id/hue_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:text="Hue" />

                <Button
                    android:id="@+id/button54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button" />

                <Button
                    android:id="@+id/button53"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button" />

                <Button
                    android:id="@+id/button52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button" />

                <Button
                    android:id="@+id/button51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button" />

                <Button
                    android:id="@+id/button50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button" />

                <Button
                    android:id="@+id/button49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button" />

                <Button
                    android:id="@+id/button48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button" />

            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Header text -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        app:boxedEdges="all">
        
        <!-- Room name -->
        <!-- TODO: check ellipsize works as intended (resize first, then ellipsis when minimum size reached.) -->
        <TextView
            android:id="@+id/main_currentlocation"
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|clip_vertical"
            android:autoSizeMinTextSize="5sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="@string/main_defaultlocation"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:ellipsize="end"
            tools:text="living room and living room and living room and living room and living" />

        <include layout="@layout/hue_control"
            android:visibility="gone"
            android:id="@+id/hue_control">

        </include>

    </FrameLayout>

</android.support.wear.widget.BoxInsetLayout>

