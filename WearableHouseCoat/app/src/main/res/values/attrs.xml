<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Stylable attributes for DeviceControlButton -->
    <declare-styleable name="DeviceControlButton">
        <attr name="background" format="color" />
        <attr name="backgroundoff" format="color" />
        <attr name="padding" format="dimension" />
        <attr name="type" format="enum">
            <!-- These need to match up with framework.controllaControllableDeviceTypeypes -->
            <enum name="light" value="0" />
            <enum name="sound" value="1" />
            <enum name="thermostat" value="2" />
            <enum name="curtains" value="3" />
            <enum name="oven" value="4" />
        </attr>
    </declare-styleable>
    
</resources>
